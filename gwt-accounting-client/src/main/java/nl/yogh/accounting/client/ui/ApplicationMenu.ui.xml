<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:nl.yogh.accounting.client.widget.menu">
  <ui:with field="res" type="nl.yogh.accounting.client.resources.R.ApplicationResource" />
  <ui:style>
  .menuBar {
    padding-top: 20px;
    width: 170px;
    -webkit-user-select: none;
    user-select: none;
  }
  
  .menuLabel {
  	position: relative;
    color: #616161;
    font-size: 1em;
    padding: 20px 20px 20px 65px;
    cursor: pointer;
    transition: background 0.15s ease-out, color 0.15s ease-out, padding 0.15s ease-out, box-shadow 0.15s ease-out;
  }
  
  .activeMenuStyle, .menuLabel:hover {
    color: white;
    padding-left: 68px;
    box-shadow: 0 0 4px rgba(0, 0, 0, .14), 0 4px 8px rgba(0, 0, 0, .28);
  }
  </ui:style>
  <m:FloatingMenu ui:field="menu" styleName="{style.menuBar}" menuStyle="{style.menuLabel}" activeMenuStyle="{style.activeMenuStyle}" />
</ui:UiBinder>