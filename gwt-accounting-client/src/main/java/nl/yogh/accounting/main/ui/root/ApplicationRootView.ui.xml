<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:a="urn:import:nl.yogh.accounting.client.ui">
  <ui:with field="res" type="nl.yogh.accounting.client.resources.R.ApplicationResource" />
  <ui:style>
  .navBar {
    position: fixed;
    width: 100%;
    z-index: 2;
  }
  
  .sidePanel {
    position: fixed;
    top: 56px;
    z-index: 2;
  }
  
  .contentContainer {
    z-index: 1;
    position: absolute;
    width: 100%;
    top: 56px;
    margin-top: 20px;
    overflow: auto;
  }
  
  .content {
    background-color: #FCFCFC;
    height: 120px;
    margin-bottom: 20px;
    transition: background 0.15s ease-out;
  }
  </ui:style>
  <g:FlowPanel>
    <a:ApplicationMenu ui:field="menu" addStyleNames="{style.sidePanel}" />
    <a:ApplicationNavBar ui:field="navBar" addStyleNames="{style.navBar}" />
    <g:SimplePanel styleName="{style.contentContainer} {res.css.flex} {res.css.grow} {res.css.justify}">
      <g:SimplePanel styleName="{res.css.mainContent} {res.css.flex} {res.css.columns}" ui:field="contentPanel" />
      </g:SimplePanel>
  </g:FlowPanel>
</ui:UiBinder>