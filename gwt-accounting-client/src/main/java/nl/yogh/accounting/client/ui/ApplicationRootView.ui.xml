<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:a="urn:import:nl.yogh.accounting.client.ui">
  <ui:with field="res" type="nl.yogh.accounting.client.resources.R.ApplicationResource" />
  <ui:style>
  .navBar {
    height: 56px;
    box-shadow: 0 0 4px rgba(0, 0, 0, .14), 0 4px 8px rgba(0, 0, 0, .28);
    position: fixed;
    width: 100%;
    z-index: 2;
    -webkit-user-select: none;
    user-select: none;
    transition: background 0.15s ease-out;
  }
  
  .sidePanel {
    position: fixed;
    top: 56px;
    padding-top: 20px;
    width: 170px;
    z-index: 2;
    -webkit-user-select: none;
    user-select: none;
  }
  
  .sideNavImage {
    cursor: pointer;
    padding: 5px;
    border-radius: 10px;
    opacity: 0.75;
    transition: background 0.1s ease-out, opacity 0.15s ease-out;
  }
  
  .sideNavImage:hover {
    opacity: 1;
  }
  
  .sideNavImage:hover {
    background-color: rgba(0, 0, 0, 0.1);
  }
  
  .sideNavImage:active {
    background-color: rgba(0, 0, 0, 0.2);
  }
  
  .navBarTitle {
    font-size: 1.5em;
    position: absolute;
    left: 20px;
  }
  
  .navBarTitleText {
    color: white;
    cursor: pointer;
    line-height: 56px;
    margin-left: 1px;
    padding: 0px 10px;
    transition: background 0.1s ease-out;
  }
  
  .navBarTitleText:hover {
    background-color: rgba(0, 0, 0, 0.1);
  }
  
  .navBarTitleText:active {
    background-color: rgba(0, 0, 0, 0.2);
  }
  
  .searchField {
    background: rgba(255, 255, 255, .15);
    padding: 6px 10px;
    border: none;
    border-radius: 2px;
    color: #eee;
    font-size: 1.5em;
    transition: background 0.15s ease-out;
  }
  
  .searchField:hover, .searchField:focus {
    background: rgba(255, 255, 255, .3);
  }
  
  .searchPanel {
    width: 66.66%;
  }
  
  .contentContainer {
    z-index: 1;
    position: absolute;
    width: 100%;
    top: 56px;
    margin-top: 20px;
    overflow: auto;
  }
  
  .content {
    background-color: #FCFCFC;
    height: 120px;
    margin-bottom: 20px;
    transition: background 0.15s ease-out;
  }
  
  .content:hover {
    background-color: #FEFEFE;
  }
  </ui:style>
  <g:FlowPanel>
    <a:ApplicationMenu ui:field="menu" styleName="{style.sidePanel}" />
    <g:FlowPanel ui:field="navBar" styleName="{style.navBar} {res.css.grow} {res.css.flex} {res.css.alignCenter} {res.css.justify}">
      <g:HTMLPanel styleName="{res.css.flex} {style.navBarTitle} {res.css.alignCenter}">
        <img height="24" width="24" class="{style.sideNavImage}"
          src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABgAAAAYCAYAAADgdz34AAAAGXRFWHRTb2Z0d2FyZQBBZG9iZSBJbWFnZVJlYWR5ccllPAAAACtJREFUeNpiYBgFo4BSwIjM+Q8EVDEUCOhmwSgYjeRRMBrJo2AUgABAgAEAdVMYB4OhELoAAAAASUVORK5CYII=" />
        <g:Label styleName="{style.navBarTitleText}" text="Inbox" />
      </g:HTMLPanel>
      <g:FlowPanel styleName="{res.css.mainContent} {res.css.flex}">
        <g:TextBox ui:field="search" styleName="{style.searchField} {res.css.grow}" />
      </g:FlowPanel>
    </g:FlowPanel>
    <g:SimplePanel styleName="{style.contentContainer} {res.css.flex} {res.css.grow} {res.css.justify}">
      <g:FlowPanel styleName="{res.css.mainContent} {res.css.flex} {res.css.columns}">
        <g:SimplePanel styleName="{style.content}" ui:field="contentPanel" />
        <g:SimplePanel styleName="{style.content}" />
        <g:SimplePanel styleName="{style.content}" />
        <g:SimplePanel styleName="{style.content}" />
        <g:SimplePanel styleName="{style.content}" />
        <g:SimplePanel styleName="{style.content}" />
        <g:SimplePanel styleName="{style.content}" />
        <g:SimplePanel styleName="{style.content}" />
        <g:SimplePanel styleName="{style.content}" />
        <g:SimplePanel styleName="{style.content}" />
        <g:SimplePanel styleName="{style.content}" />
      </g:FlowPanel>
    </g:SimplePanel>
  </g:FlowPanel>
</ui:UiBinder>